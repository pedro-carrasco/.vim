filetype plugin indent on 
syntax on 
set encoding=utf-8

inoremap jk <ESC>
let mapleader="<Space>"

set encoding=utf-8
set ruler
set nowrap
set cmdheight=2
" Show line number
set nu
" Ignore case when searching
set ignorecase
set incsearch
" Set magic on
set magic
" show matching bracets
set showmatch
set showfulltag

set packpath+=~/.vim/pack/

"NERDTree config
map <C-n> :NERDTreeToggle<CR>

